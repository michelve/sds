/**
 * Error recovery and fallback handling
 */
function handlePluginError(error, context) {
  console.error(`âŒ Plugin error in ${context}:`, error);
  
  figma.ui.postMessage({
    type: 'plugin-error',
    error: error.message,
    context: context,
    timestamp: Date.now()
  });
}

